<div class="col-md-12 mx-auto mt-0">
    <div class="card ">
        <div class="card-header text-center">
            <h1 class="h4 text-black font-weight-bold">Solicitud de Reconocimiento</h1>
        </div>
        <div class="card-body">
            <form action="/publications/add" enctype="multipart/form-data" class= "justify-content-center" id="realForm" onkeydown="return event.key != 'Enter';" method="POST">                         
                <div class="form-group row">
                    <div class="col mb-2">
                        <label for="name" id="name_label">Título del Material</label>
                        <input id="name" type="text" class="form-control" name="name" placeholder="Nombre de la Producción Académica"
                            required>
                    </div>
                    <div class="col mb-2">
                        <label for="date">Fecha de Publicación</label>
                        <input id="datePublication" type="date" class="form-control" name="fecha_publicacion" required>
                    </div>
                </div>
                <div class="form-group row" id="row_1">
                    <div class="col-md-3 mb-2" id="modalidad">                     
                        <select class="form-select mr-sm-2" name="modalidad" id="select_modalidad"
                            onchange="if (this.selectedIndex) PublicationsList(this);" required>
                            <option selected disabled value="">-- Modalidad Académica --</option>
                            {{#json}}
                            <option value="{{this}}">{{this}}</option>
                            {{/json}}
                        </select>
                    </div>
                </div>
                <hr id="hr">
                <div class="col-md-2 text-start">                  
                    <a type="button" class="btn btn-block btn-primary" id="sizeLimitButton" style="color: white; background-color: rgb(140, 20, 27); border: 0;;" onclick="sizeLimit()">Enviar</a>
                </div>
            </form>        
        </div>
    </div>    
</div>
<br>
<form action="/publications/myPublications" method="get">
    <button class="d-none" type="submit" id="submitButton"></button>
</form>