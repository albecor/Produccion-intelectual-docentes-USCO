<div class="col-md-8 mx-auto mt-0">
    <div class="card ">
        <div class="card-header text-center bg-secondary">            
            <h1 class="h4 text-white font-weight-bold">Agregar un ISBN</h1>
        </div>
        <div class="card-body"> 

            <form action="/load/isbn" class= "justify-content-center" method="POST" enctype="multipart/form-data" id="FormValidate">                              
                <div class="form-group row">
                    <div class="col mb-2">                        
                        <input type="file" class="form-control bg-light" name="file" required>
                    </div>
                </div>
                <hr>
                <div class="col text-center">
                    <a type="button" class="btn btn-primary btn-block" style="border: none; background-color: rgb(140, 20, 27)" onclick="checkInputs()">Agregar</a>
                    <button type="submit" class="d-none" id="realClick"></button>
                </div>        
            </form>            
        </div>
    </div>    
</div>

