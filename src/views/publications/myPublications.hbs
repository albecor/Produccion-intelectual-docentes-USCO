<div class="container">
<div> 
  <hr>
  <h2> <p class="font-italic inline">Solicitudes</p></h2>  
  <hr>
</div>
{{#if publications}}
  <table class="table table-light table-bordered table-hover overflow-y: hidden" id="myPublications">
    <thead class="table-secondary">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Modalidad</th>
        <th scope="col">URL</th>
        <th scope="col">Fecha de Solicitud</th>
        <th scope="col">Fecha de Publicaci√≥n</th>
        <th scope="col">Estado</th>
        <th scope="col">Descargar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>   
      {{#publications}} 
        <tr>
          <th scope="row">{{index}}</th>
          <td>{{name}}</td>
          <td>{{modalidad}}</td>
          <td class="text-center"><a href="{{URL}}" target="_blank" title="URL"><i class="fa fa-globe" style="color: black;"></i></a></td>
          <td>{{createdAt}}</td>
          <td>{{fecha_publicacion}}</td>
          <td>{{estado}}</td>
          <td class="text-center">
            <a href="/file/download/{{_id}}" title="Descargar"><i class="fas fa-download"></i></a>
          </td>
          <td class="text-center">
            <a index="{{@index}}" publi="{{_id}}" type="button" onclick="comprobarEliminar(this)" title="Eliminar" class="pt-1"><i class="fa fa-trash" style="color: black;"></i></a>
            <form action="/publications/delete/{{_id}}?_method=DELETE" method="POST">
              <button type="submit" style="display: none;" id="deleteButton{{@index}}" class="btn"><i class="fa fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/publications}}     
    </tbody>
  </table>
{{else}}
  <br>
  <br>
  <br>
  <div>
    <h4>No se encontraron solicitudes</h4>
  </div>
{{/if}}
</div>
