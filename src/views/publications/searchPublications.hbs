<div class="col-md-12 mx-auto mt-0">
    <div class="card ">
        <div class="card-header text-center">
            <h1 class="h4 text-black font-weight-bold">Búsqueda de Solicitudes</h1>
        </div>
        <div class="card-body">
            <form class="justify-content-center" onkeydown="return event.key != 'Enter';" method="GET">
                <div class="form-group row" id="row_1">
                    <div class="col-3">
                        <h6>Estado de las Solicitudes</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Pendiente por revisión</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">Revisado</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Rechazado</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">No aprobado por CAP</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Aprobado</label>
                        </div>
                    </div>
                    <div class="col-md-3 mb-2" id="fecha_1">
                        <label for="startDate">Fecha de Inicio</label>
                        <input class="form-control" type="date" name="startDate" required>
                    </div>
                    <div class="col-md-3 mb-2" id="fecha_2">
                        <label for="endDate">Fecha de Final</label>
                        <input class="form-control" type="date" name="endDate" required>
                    </div>
                </div>
                <div class="col-md-2 mt-2 text-start">                  
                    <a type="button" class="btn btn-block btn-primary" id="sizeLimitButton" style="color: white; background-color: rgb(140, 20, 27); border: 0;;" onclick="searchPublications()">Buscar</a>
                </div>
                <hr id="hr">
            </form>        
        </div>
    </div>    
</div>