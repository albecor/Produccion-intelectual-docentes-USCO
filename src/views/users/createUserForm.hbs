<div class="col-md-8 mx-auto mt-0">
    <div class="card ">
        <div class="card-header text-center bg-secondary">            
            <h1 class="h4 text-white font-weight-bold">Agregar un nuevo usuario</h1>
        </div>
        <div class="card-body"> 

            <form action="/users/createUser" class= "justify-content-center" method="POST" id="FormValidate">  

                <h6 class="fw-bold mt-0 mb-1">Información personal</h6>                              
                <div class="form-group row">
                    <div class="col mb-2">                        
                        <select class="form-select mr-sm-2" id="inlineFormCustomSelect" name="identification_type" required>
                                <!-- Circulear externa 024 de 2019 Ministerio de protección social -->                            
                                <option value="" selected>--- Elija un tipo de identificación ---</option>                            
                                <option value="Cedula">Cédula</option>
                                <option value="Cedula_extrangeria">Cédula de extrangeria</option>
                                <option value="Pasaporte">Pasaporte</option>
                                <option value="Tarjeta_identidad">Tarjeta de identidad</option>
                                <option value="Registro_civil">Registri civil</option>
                                <option value="Carnet_diplomatico">Carné diplomático</option>
                                <option value="Salvoconducto">Salvoconducto</option>
                                <option value="Perm_especial_permanencia">Perrmiso especial de permanencia</option>
                                <option value="Documento_extrangero">Documento extrangero</option>
                                <option value="Sin_identificacion">Sin identificación</option>
                        </select>
                    </div> 
                    <div class="col mb-2">
                        <input type="number" class="form-control bg-light" name="identification" placeholder="No. de identificación" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col mb-0">
                            <input type="text" class="form-control bg-light" name="name" placeholder="Nombres" required>
                    </div>
                    <div class="col mb-0">
                        <input type="text" class="form-control bg-light" name="lastname" placeholder="Primer apellido" required>
                    </div>
                    <div class="col mb-0">
                        <input type="text" class="form-control bg-light" name="sec_lastname" placeholder="Segundo apellido" required>
                    </div>
                </div>
                                                        
                <hr>

                <h6 class="fw-bold mt-0 mb-1">Datos de localización</h6>                              
                <div class="form-group row"> 
                    <div class="col-md-6 mb-2"> 
                        <input type="number" class="form-control bg-light" name="phone" placeholder="Teléfono">
                    </div>
                    <div class="col-md-6 mb-2"> 
                        <input type="text" class="form-control bg-light" name="address"
                            placeholder="Dirección">
                    </div>
                    <div class="col-md-6 mb-0"> 
                        <select class="form-select mr-sm-2" name="departamento" id="departamentoSelect"
                            onchange="if (this.selectedIndex) municipiosList(this);">
                            <option selected disabled value="">-- Departamento --</option>
                            {{#json}}
                            <option value="{{departamento}}">{{departamento}}</option>
                            {{/json}}
                        </select>
                    </div>
                    <div class="col-md-6 mb-0"> 
                        <select class="form-select mr-sm-2" name="municipio" id="munipiosSelect">
                            <option selected disabled value="">-- Municipio --</option>
                        </select>
                    </div>
                </div>
                <hr>

                <h6 class="fw-bold mt-0 mb-1">Información de sesión</h6>                              
                <div class="form-group row d-flex justify-content-center">                    
                    <div class="col-md-6 mb-2" id="divF">                        
                        <select class="form-select mr-sm-2" id="role" name="role" onchange="if (this.selectedIndex) assignment(this);" required>
                            <option value="" disabled selected>--- Elija un tipo de usuario ---</option>
                            <option value="Docente">Docente</option>
                            <option value="Funcionario">Funcionario</option>
                            <option value="Admin">Administrador de la plataforma</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2" id="divP">
                        <input type="email" class="form-control bg-light" name="email" placeholder="Email" required>
                    </div>
                    <div class="col-md-6 mb-0" id="password">
                        <input type="password" class="form-control bg-light" name="password" placeholder="Contraseña" required>
                    </div>
                    <div class="col-md-6 mb-0" id="c_password">
                        <input type="password" class="form-control bg-light" name="confirm_password" placeholder="Confirmar contraseña" required>           
                    </div>                   
                </div>
                <hr>
                <div class="col text-center">             
                    <a type="button" class="btn btn-primary btn-block" style="border: none; background-color: rgb(140, 20, 27)" onclick="checkInputs()">Agregar</a>
                    <button class="d-none" id="realClick"></button>
                </div>        
            </form>            
        </div>
    </div>    
</div>

<br>


